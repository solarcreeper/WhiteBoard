<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout1Publish2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_background" >

    <!-- 标题菜单 -->

    <RelativeLayout
        android:id="@+id/relativeLayout2Publish2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_title_background" >

        <ImageButton
            android:id="@+id/backPublish2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/style_title_button_back" />

        <TextView
            android:id="@+id/titlePublish2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_publish"
            android:textColor="#ffffff"
            android:textSize="20dp"
            tools:ignore="SpUsage" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3Publish2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout2Publish2"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="30dp" >
        
        <!-- 提示语:选择一个类别 -->

        <TextView
            android:id="@+id/promptClassesPublish2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/publish2_category_layout"
            android:layout_marginBottom="8dp"
            android:text="@string/prompt_classes_publish2"
            android:textColor="#777777"
            android:textSize="14sp" />

        <!-- 类别选项按钮 -->
        
        <RelativeLayout 
            android:id="@id/publish2_category_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:layout_below="@id/promptClassesPublish2"
	        android:layout_centerHorizontal="true"
            android:gravity="center" >

	        <ImageButton
	            android:id="@+id/buttonClassesPublish2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/style_list_button_normal"/>
	        
	        <ImageView
		        android:id="@+id/publish2_category_image"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/buttonClassesPublish2"
	            android:layout_centerVertical="true" 
	            android:background="@drawable/category_label1"
	            android:layout_marginLeft="8dp"/>
	        
	        <ImageView
	            android:id="@+id/nextItem"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignRight="@+id/buttonClassesPublish2"
	            android:layout_centerVertical="true"
	            android:background="@drawable/icon_navigation_next_item" />
	        
	        <TextView 
	            android:id="@+id/publish2_label_category"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/publish2_category_image"
	            android:layout_centerVertical="true"
	            android:textColor="#444444"
	            android:textSize="16sp"
	            android:text="分类设置"/>
        
        </RelativeLayout>
        
        <!-- 提示语隐私设置 -->
        <TextView
            android:id="@+id/promptLimitPublish2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/publish2_privacy_layout"
            android:layout_below="@id/publish2_category_layout"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="8dp"
            android:text="@string/prompt_limit_publish2"
            android:textColor="#777777"
            android:textSize="14sp" />

        <!-- 隐私设置按钮 -->
        
        <RelativeLayout 
            android:id="@id/publish2_privacy_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:layout_below="@id/promptLimitPublish2"
	        android:layout_centerHorizontal="true"
            android:gravity="center" >

	        <ImageButton
	            android:id="@+id/buttonLimitPublish2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/style_list_button_normal" />   
	         
	        <ImageView
	            android:id="@+id/nextItem"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignRight="@+id/buttonLimitPublish2"
	            android:layout_centerVertical="true"
	            android:background="@drawable/icon_navigation_next_item" />
	            
	        <TextView 
	            android:id="@+id/publish2_label_privacy"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@id/buttonLimitPublish2"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="8dp"
	            android:textColor="#444444"
	            android:textSize="16sp"
	            android:text="隐私设置"/>
	            
	    </RelativeLayout>
            
    </RelativeLayout>
            
    <RelativeLayout
        android:id="@+id/relativeLayout4Publish2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/relativeLayout3Publish2"
        android:gravity="bottom"
        android:paddingBottom="80dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <!-- 扔出去按钮 -->

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/buttonOtherPlacePublish2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/style_button_publish_away" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="扔出去"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>
        
        <!-- 本地发布按钮 -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relativeLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/buttonLocallyPublish2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/style_button_publish_local" />

            <TextView
                android:id="@+id/publish_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="本地发布"
                android:textColor="#ffffff"
                android:textSize="18sp" />
            
            <ProgressBar 
                android:id="@+id/indicator"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/publish_label"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>