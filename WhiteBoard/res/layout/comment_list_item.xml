<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingLeft="8dp"
    android:paddingRight="8dp">
    
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="8dp"
	    android:background="@drawable/icon_background_mid_discuss">
	    
	    <TextView 
	        android:id="@+id/comment_list_uid"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:visibility="gone"/>
	    
	    <TextView 
	        android:id="@+id/comment_list_mid"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:visibility="gone"/>
	    
	    <!-- 头像 -->
	    <RelativeLayout
	        android:id="@+id/layout_avatar"
	     	android:layout_width="56dp"
	      	android:layout_height="56dp"
	      	android:layout_marginRight="8dp"
	       	android:gravity="center"
	       	android:padding="4dp"
	       	android:background="@drawable/avatar_background">
		
		    <ImageView
		        android:id="@+id/comment_list_avatar"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_centerHorizontal="true"
		        android:layout_centerVertical="true"
		        android:scaleType="fitCenter"
		        android:src="@drawable/default_avatar" />
		    
	    </RelativeLayout>
	    
	    <!-- 右部 -->
	
	    <RelativeLayout
	        android:id="@+id/layout_right"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	        
	        <TextView
	            android:id="@+id/comment_list_username"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_marginBottom="8dp"
	            android:textColor="#444444"
	            android:textSize="16sp"
	            android:text="UserName"/>
	        
	        <TextView
	            android:id="@+id/comment_list_date"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	            android:gravity="center"
	            android:text="2013-07-23"
	            android:textColor="#aaaaaa"
	            android:textSize="12sp" />
	
	        <TextView
	            android:id="@+id/comment_list_content"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/comment_list_username"
	            android:textColor="#7a7a7a"
	            android:textSize="16sp"
	            android:text="测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本测试文本"
	             />
	
	    </RelativeLayout>
	    
	</LinearLayout>

</FrameLayout>